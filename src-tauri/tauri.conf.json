{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "PTracker",
  "version": "0.1.0",
  "identifier": "com.PTracker",

  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 200,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "visible": false,
        "center": true,
        "decorations": false
      },
      {
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 200,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
