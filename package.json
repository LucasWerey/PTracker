{
  "name": "portfolio-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky install",
    "cm": "cz",
    "test": "lint",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "generate-ui-exports": "bun run tsx ./src/scripts/generate-ui-exports.ts",
    "generate-components-exports": "bun run tsx ./src/scripts/generate-components-exports.ts",
    "generate-exports": "bun run generate-components-exports && bun run generate-ui-exports"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.11",
    "@tanstack/react-query-devtools": "^5.59.11",
    "@tauri-apps/api": ">=2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-shell": ">=2.0.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "gsap": "^3.12.5",
    "jotai": "^2.10.0",
    "jotai-devtools": "^0.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@tauri-apps/cli": ">=2.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "commitizen": "^4.3.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.2.1",
    "husky": "^8.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.3.1"
  }
}
